<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="396.0" prefWidth="411.0" style="-fx-border-color: black;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <center>
        <BorderPane>
            <center>
                <BorderPane>
                    <center>
                        <GridPane prefHeight="141.0" prefWidth="548.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <Button fx:id="enter" mnemonicParsing="false" onAction="#buttonExp" prefHeight="106.0"
                                    prefWidth="120.0" text="e" GridPane.columnIndex="3" GridPane.rowIndex="1">
                                <font>
                                    <Font size="26.0"/>
                                </font>
                            </Button>
                            <Button fx:id="clear" mnemonicParsing="false" onAction="#buttonClicked" prefHeight="106.0"
                                    prefWidth="120.0" text="CLEAR" GridPane.columnIndex="4" GridPane.rowIndex="1">
                                <font>
                                    <Font size="18.0"/>
                                </font>
                            </Button>
                            <Button fx:id="sum" mnemonicParsing="false" onAction="#buttonSum" prefHeight="104.0"
                                    prefWidth="112.0" text="+">
                                <font>
                                    <Font size="30.0"/>
                                </font>
                            </Button>
                            <Button fx:id="sub" mnemonicParsing="false" onAction="#buttonSub" prefHeight="106.0"
                                    prefWidth="120.0" text="-" GridPane.columnIndex="1">
                                <font>
                                    <Font name="System Bold" size="30.0"/>
                                </font>
                            </Button>
                            <Button fx:id="mul" mnemonicParsing="false" onAction="#buttonMul" prefHeight="106.0"
                                    prefWidth="120.0" text="*" GridPane.columnIndex="2">
                                <font>
                                    <Font size="30.0"/>
                                </font>
                            </Button>
                            <Button fx:id="div" mnemonicParsing="false" onAction="#buttonDiv" prefHeight="106.0"
                                    prefWidth="120.0" text="/" GridPane.columnIndex="3">
                                <font>
                                    <Font size="30.0"/>
                                </font>
                            </Button>
                            <Button fx:id="sin" mnemonicParsing="false" onAction="#buttonSin" prefHeight="106.0"
                                    prefWidth="120.0" text="sin" GridPane.rowIndex="1">
                                <font>
                                    <Font size="24.0"/>
                                </font>
                            </Button>
                            <Button fx:id="cos" mnemonicParsing="false" onAction="#buttonCos" prefHeight="106.0"
                                    prefWidth="120.0" text="cos" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                <font>
                                    <Font size="24.0"/>
                                </font>
                            </Button>
                            <Button fx:id="buttonClicked" mnemonicParsing="false" onAction="#buttonTan"
                                    prefHeight="106.0" prefWidth="120.0" text="tan" GridPane.columnIndex="2"
                                    GridPane.rowIndex="1">
                                <font>
                                    <Font size="24.0"/>
                                </font>
                            </Button>
                            <Button fx:id="power" mnemonicParsing="false" onAction="#buttonPower" prefHeight="106.0"
                                    prefWidth="119.0" text="^" GridPane.columnIndex="4">
                                <font>
                                    <Font size="27.0"/>
                                </font>
                            </Button>
                        </GridPane>
                    </center>
                </BorderPane>
            </center>
            <top>
                <GridPane prefHeight="136.0" prefWidth="530.0" BorderPane.alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="273.0" minWidth="10.0" prefWidth="178.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="397.0" minWidth="10.0" prefWidth="380.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Label fx:id="num1" prefHeight="32.0" prefWidth="182.0" text="Num 1">
                        <font>
                            <Font size="22.0"/>
                        </font>
                    </Label>
                    <Label fx:id="num2" prefHeight="48.0" prefWidth="177.0" text="Num 2" GridPane.rowIndex="1">
                        <font>
                            <Font size="22.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="first" promptText="Enter your first number" style="-fx-background-radius: 50;"
                               GridPane.columnIndex="1">
                        <font>
                            <Font size="17.0"/>
                        </font>
                    </TextField>
                    <TextField fx:id="second" prefWidth="380.0" promptText="Enter your second number"
                               style="-fx-background-radius: 50;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <font>
                            <Font size="17.0"/>
                        </font>
                    </TextField>
                </GridPane>
            </top>
        </BorderPane>
    </center>
    <top>
        <TextArea fx:id="screen" editable="false" nodeOrientation="RIGHT_TO_LEFT" prefHeight="124.0" prefWidth="403.0" BorderPane.alignment="CENTER">
            <font>
                <Font size="40.0" />
            </font>
        </TextArea>
    </top>
</BorderPane>
